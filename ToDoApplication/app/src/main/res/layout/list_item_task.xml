<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:gravity="center_horizontal"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/task_check_box"
        android:layout_width="59dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_item_name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:singleLine="true"
            android:text="@string/text_placeholder" />

        <TextView
            android:id="@+id/task_item_date"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/text_placeholder" />
    </LinearLayout>

    <ImageView
        android:id="@+id/task_item_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="house"
        android:padding="@dimen/task_item_padding"
        android:scaleType="center"
        tools:srcCompat="@drawable/ic_house" />

</LinearLayout>